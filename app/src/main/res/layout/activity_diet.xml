<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan_600_4">

    <RelativeLayout
      android:id="@+id/header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/base_margin_small">

      <android.support.v7.widget.AppCompatImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/base_margin_small"
        android:clickable="true"
        android:focusable="true"
        android:src="@mipmap/ic_back" />

      <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/roboto_medium"
        android:text="DIET FOR"
        android:textColor="@color/black"
        android:textSize="@dimen/base_text_size_three" />

    </RelativeLayout>

    <HorizontalScrollView
      android:id="@+id/hsv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="140dp"
      android:layout_below="@id/header"
      android:scrollbars="none">

      <LinearLayout
        android:id="@+id/daysList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
          android:id="@+id/monday"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/base_margin_big"
          android:paddingStart="@dimen/base_margin_big"
          android:paddingEnd="@dimen/base_margin_big"
          android:background="@null"
          android:text="Monday" />

        <Button
          android:id="@+id/tuesday"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/base_margin_big"
          android:paddingStart="@dimen/base_margin_big"
          android:paddingEnd="@dimen/base_margin_big"
          android:background="@null"
          android:text="Tuesday"
          android:textColor="@color/grey_700" />

        <Button
          android:id="@+id/wednesday"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/base_margin_big"
          android:paddingStart="@dimen/base_margin_big"
          android:paddingEnd="@dimen/base_margin_big"
          android:background="@null"
          android:text="Wednesday"
          android:textColor="@color/grey_700" />

        <Button
          android:id="@+id/thursday"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/base_margin_big"
          android:paddingStart="@dimen/base_margin_big"
          android:paddingEnd="@dimen/base_margin_big"
          android:background="@null"
          android:text="Thursday"
          android:textColor="@color/grey_700" />

        <Button
          android:id="@+id/friday"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/base_margin_big"
          android:paddingStart="@dimen/base_margin_big"
          android:paddingEnd="@dimen/base_margin_big"
          android:background="@null"
          android:text="Friday"
          android:textColor="@color/grey_700" />

        <Button
          android:id="@+id/saturday"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/base_margin_big"
          android:paddingStart="@dimen/base_margin_big"
          android:paddingEnd="@dimen/base_margin_big"
          android:background="@null"
          android:text="Saturday"
          android:textColor="@color/grey_700" />

        <Button
          android:id="@+id/sunday"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/base_margin_big"
          android:paddingStart="@dimen/base_margin_big"
          android:paddingEnd="@dimen/base_margin_big"
          android:background="@null"
          android:text="Sunday"
          android:textColor="@color/grey_700" />
      </LinearLayout>

    </HorizontalScrollView>

    <android.support.v7.widget.CardView
      android:id="@+id/card"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="3dp"
      android:layout_marginBottom="@dimen/base_margin_big"
      android:layout_marginLeft="@dimen/base_margin_biggest"
      android:layout_marginRight="@dimen/base_margin_biggest"
      android:layout_below="@id/hsv"
      app:cardCornerRadius="20dp"
      app:cardElevation="3dp">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/base_margin_big"
          android:fontFamily="@font/roboto_medium"
          android:gravity="center"
          android:text="BREAKFAST"
          android:textColor="@color/black"
          android:textSize="@dimen/base_text_size_three" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/base_margin_big"
          android:layout_marginRight="@dimen/base_margin_big">
          <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="oatmeal"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/base_margin_biggest" />

          <EditText
            android:layout_width="wrap_content"
            android:text="170"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="g"
            android:textColor="@color/black" />

        </LinearLayout>

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/base_margin_big"
          android:fontFamily="@font/roboto_medium"
          android:gravity="center"
          android:text="DINNER"
          android:textColor="@color/black"
          android:textSize="@dimen/base_text_size_three" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/base_margin_big"
          android:layout_marginRight="@dimen/base_margin_big">
          <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="chicken soup"
            android:layout_marginRight="@dimen/base_margin_biggest" />

          <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250"
            android:layout_weight="0.1" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="g"
            android:textColor="@color/black" />

        </LinearLayout>

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/base_margin_big"
          android:fontFamily="@font/roboto_medium"
          android:gravity="center"
          android:text="SUPPER"
          android:textColor="@color/black"
          android:textSize="@dimen/base_text_size_three" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/base_margin_big"
          android:layout_marginRight="@dimen/base_margin_big">
          <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="cottage cheese"
            android:layout_marginRight="@dimen/base_margin_biggest" />

          <EditText
            android:layout_width="wrap_content"
            android:text="70"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="g"
            android:textColor="@color/black" />

        </LinearLayout>

        <Button
          android:id="@+id/btnNext"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/base_margin_biggest"
          android:layout_marginBottom="@dimen/base_margin_biggest"
          android:layout_marginLeft="@dimen/base_margin_biggest"
          android:layout_marginRight="@dimen/base_margin_biggest"
          android:text="next"
          android:textColor="@color/white" />

      </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
      android:id="@+id/btnSave"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/base_margin_biggest"
      android:layout_marginBottom="@dimen/base_margin_biggest"
      android:layout_marginLeft="@dimen/base_margin_biggest"
      android:layout_marginRight="@dimen/base_margin_biggest"
      android:layout_below="@id/card"
      android:text="save"
      android:textColor="@color/white" />


  </RelativeLayout>

</android.support.v4.widget.NestedScrollView>